{
  "compilerOptions": {
    // Target latest version of ECMAScript.
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    // additional
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src"
  ]
}