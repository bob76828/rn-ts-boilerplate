{
  "compilerOptions": {
    // Target latest version of ECMAScript.
    "skipLibCheck": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    // additional
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/types/*",
        "node_modules/*"
      ]
    },
    "types": [
      "react",
      "react-native",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}